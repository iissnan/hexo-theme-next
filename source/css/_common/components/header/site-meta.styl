.site-meta {
  margin: 80px 0 0;
  text-align: $site-meta-text-align;

  +mobile() {
    text-align: center;

  }
}

.brand {
  position: relative;
  display: inline-block;
  padding: 0 40px;
  color: $brand-color;
  background: $brand-bg;
  border-bottom: none;
  &:hover { color: $brand-hover-color; }
}

.logo {
  display: inline-block;
  margin-right: 5px;
  line-height: 36px;
  vertical-align: top;
}

.site-title {
  display: inline-block;
  vertical-align: top;
  font-size: 80px;
  font-weight: 700;
  font-family: $font-family-logo;
  line-height: 100px;

  &:before, &:after {
    content: '';
    width: 100%;
    border-top: 5px solid white;
    display: block;
    transform-origin: left;
    transition-duration: 500ms;
    transition-timing-function: ease;
    transform: scaleX(0);
  }
  &:after {
    transform-origin: right;
  }

  &.show {
    &:before, &:after {
      transform: scaleX(1);
    }
  }
  +mobile() {
    font-size: 60px;

    &:before, &:after {
      border-width: 3px;
    }
  }

}

.site-subtitle {
  margin-top: 10px;
  font-size: 18px;
  font-weight: 300;
  color: white;

  +mobile() {
    font-size: 16px;
  }
}

.use-motion {
  .brand { opacity: 0; }

  .logo, .site-title, .site-subtitle {
    opacity: 0;
    position: relative;
    top: -10px;
  }
}
