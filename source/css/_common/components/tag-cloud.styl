.tag-cloud {
  text-align: center;

  a {
    display: inline-block;
    margin: 10px;
  }
}

.tag-cloud-tags a{
    display: inline-block;
    background-color $tag-bg-color;
    padding: 2px 8px;
    color: #fff;
    border-bottom: none;
    transition: all .5s ease-in-out;
    border-radius: 3px;
}

.tag-cloud-tags a:hover {
    font-size: 16px;
}
