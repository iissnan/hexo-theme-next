
.header {
  background: $headerBackgroundColor;
  border-bottom: solid $headerBorderBottomWidth $headerBorderBottomColor;
}

.header-inner {
  position: relative;
}

.brand {
  text-align: $brandTextAlignment;

  a {
    display: inline-block;
    padding: 2px 15px;
    text-align: center;
    color: $brandTextColor;
    background: $brandBackground
    border-bottom: none;
    font-family: $fontLogo;

    the-shape(15px, white, 2px);
  }

  .site-title {
    display: inline-block;
    vertical-align: top;
    line-height: 35px;
    text-transform: uppercase;
    font-size: 20px;
    font-weight: bold;
  }
}

.menu {
  margin-top: 20px;
  padding-left: 0;
  text-align: center;
}

.menu .menu-item {
  display: inline-block;
  margin-left: 30px;

  &:first-child {
    margin-left: 0;
  }

  a {
    display: block;
    color: $colorDeepBlack;
    font-size: 14px;
    text-decoration: none;
    text-transform: capitalize;
    border-bottom: 1px solid $colorDarkGray;

    &:hover {
      border-bottom-color: $colorDeepBlack;
    }
    &::before {
      content: "";
      display: block;
      margin: 0 auto;
      width: 24px;
      height: 24px;
      vertical-align: middle;

    }
  }
}

