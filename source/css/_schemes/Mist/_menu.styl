// Menu
// --------------------------------------------------
.site-nav-toggle {
  //position: static;
  //float: right;

  display: none;
  position: absolute;
  top: 10px;
  left: 10px;
}

.site-nav {
  display: block !important;
}


.menu {
  //float: right;
  //margin: 8px 0 0 0;

  float: left;
  margin: 8px 0 0 20px;
  padding: 0 20px;

  +mobile() {
    margin: 20px 0 0 0;
    padding: 0;
  }

  br { display: none; }

  .menu-item {
    margin: 0;
    +mobile() { display: block; }
  }

  .menu-item a {
    padding: 0 10px;
    background: none;
    border: none;
    border-radius: 2px;
    transition-property: background;

    +mobile() {
      text-align: left;
    }

    &:hover { background: #e1e1e1; }
  }

  a::before {
      display: none;

      +mobile() { display: block; }
    }

  +mobile() { float: none; }
}

.menu-left {
  float: left;
}
