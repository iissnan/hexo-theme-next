.posts-expand {
  padding-top: 40px;
}

@media (max-width: 767px) {
  .posts-expand {
    margin: 0 20px;
  }

  .post-body {
    pre, .highlight {
      margin 0 -20px
      padding 10px 20px
      .gutter pre {
        padding-right 10px
      }
    }
  }
}

.posts-expand .post-title {
  font-size: 26px;
  text-align: center;

  +mobile() {
    font-size: 22px;
  }
}
.posts-expand .post-title-link {
  position: relative;
  color: $colorLightBlack;
  border-bottom: none;
  line-height: 1.2;
  vertical-align: top;

  &::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: #000;
    visibility: hidden;
    transform: scaleX(0);
    the-transition();
  }

  &:hover::before {
    visibility: visible
    transform: scaleX(1);
  }
}

.posts-expand .post-meta {
  margin: 3px 0 60px 0;
  color: $colorDarkGray;
  font-size: 12px;
  text-align: center;

  .post-category-list {
    display inline-block
    margin 0
    padding 3px
  }
  .post-category-list-link {
    color: $colorDarkGray;
  }

  .post-comments-count a{
    border-bottom: none;
    color: $colorDarkGray;
  }
}

.posts-expand .post-body {
  h2, h3, h4, h5, h6 {
    padding-top: 10px;
  }
  
  img {
    box-sizing: border-box;
    margin: auto;
    padding: 3px;
    border: 1px solid $colorLighterGray;
  }

  .full-image {
    border: none;
    +desktop() {
      max-width: none;
      width: 126%;
      margin: 0 -13%;
    }
  }
}

.posts-expand .post-tags {
  margin-top: 60px;
  text-align: center;

  a {
    display inline-block
    margin-right 10px
    font-size: 13px
  }
}

.posts-expand {
  the-shape(6px, $colorLightGray, -13px, 5px, #fff);
  .post-eof {
    display: block;
    margin 160px auto 120px
    width 8%
    height 1px
    background $colorLightGray
    text-align center
  }
}

.post-more-link {
  margin-top: 50px;
}
